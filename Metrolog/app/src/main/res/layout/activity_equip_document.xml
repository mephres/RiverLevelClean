<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.equip_document.EquipDocumentActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/equipDocumentTypeSpinner"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/md_black_1000"
        android:hint="@string/equip_document_activity_document_type_spinner_hint"
        android:textColorHint="@color/colorPrimary"
        app:boxBackgroundColor="@color/md_white_1000"

        app:hintTextColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/equipDocumentTypeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/equipDocumentCardView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="6dp"

        app:layout_constraintEnd_toStartOf="@+id/equipDocumentPhotoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipDocumentTypeSpinner">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/equipDocumentImageSliderView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_baseline_photo_72dp"
            android:scaleType="centerInside"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="bottom|center_horizontal"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"

            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/equipDocumentPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/md_white_1000"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/equipDocumentChoosePhotoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_a_photo_48dp"
        app:tint="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/equipDocumentChoosePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/md_white_1000"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/equipDocumentEditPhotoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_attach_file_48dp"
        app:tint="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/equipDocumentEditPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/md_white_1000"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/equipDocumentDeletePhotoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_crop_48dp"
        app:tint="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/equipDocumentDeletePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/md_white_1000"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/equipDocumentCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_48dp"
        app:tint="@color/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/equipDocumentSavePdfButton"
        style="?attr/materialButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="@string/equip_document_activity_save_pdf_button_title"
        android:textAllCaps="false"
        app:cornerRadius="4dp"
        android:textColor="@color/md_white_1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipDocumentCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>